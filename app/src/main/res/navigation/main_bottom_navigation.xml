<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_bottom_navigation"
    app:startDestination="@id/navigation_shows">

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="com.distillery.tvshows.ui.favorite.FavoritesFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_navigation_favorites_to_navigation_detail"
            app:destination="@id/navigation_detail" />
    </fragment>
    <fragment
        android:id="@+id/navigation_shows"
        android:name="com.distillery.tvshows.ui.shows.ShowsFragment"
        android:label="@string/title_shows"
        tools:layout="@layout/fragment_shows">
        <action
            android:id="@+id/action_navigation_shows_to_navigation_detail"
            app:destination="@id/navigation_detail" />
    </fragment>
    <fragment
        android:id="@+id/navigation_detail"
        android:name="com.distillery.tvshows.ui.detail.DetailFragment"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="tvShowDetail"
            app:argType="com.distillery.tvshows.data.entity.FavoriteTVShow" />
    </fragment>
</navigation>